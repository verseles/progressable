{
  "name": "verseles/progressable",
  "description": "A Laravel (not only) package to track and manage progress for different tasks or processes.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "HÃ©lio Oliveira",
      "email": "open@helio.me"
    }
  ],
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^v11",
    "illuminate/cache": "^11",
    "illuminate/contracts": "^11"
  },
  "autoload": {
    "psr-4": {
      "Verseles\\Progressable\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Verseles\\Progressable\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Verseles\\Progressable\\ProgressableServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit tests/ProgressableTest.php --testdox"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "orchestra/testbench": "^9.0",
    "phpunit/phpunit": "^11.1"
  }
}
